<!doctype html>
<html lang="cs-cz">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />


    <title>PojisteniApp</title>
</head>
<body>
    <header>
        <h1 class="d-none">Pojišťovna Prokop</h1>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary text-white border-bottom box-shadow py-lg-3">
            <a class="navbar-brand mr-5 text-white" asp-controller="Home" asp-action="Index">PojisteniApp</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#obsah-navigacni-listy" aria-controls="obsah-navigacni-listy" aria-expanded="false" aria-label="Rozbalit navigaci">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="obsah-navigacni-listy">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white " asp-controller="PolicyHolders" asp-action="Index">Pojištěnci</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white " asp-controller="Assurances" asp-action="Index">Pojištění</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white " href="#">Události</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white " href="#">O aplikaci...</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white " href="#">Přihlásit</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white " href="#">Registrovat</a>
                    </li>
                </ul>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="text-center">
            &copy; 2023 - Pojisteni
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
