@model IEnumerable<WebApplication8.Models.PolicyHolder>

@{
    ViewData["Title"] = "Pojištěnci";
}

<h2 class="mt-3">Pojištěnci</h2>

<div class="text-center mt-3">
    <a class = "btn btn-primary text-center" asp-action="Create">Nový pojištěnec</a>
</div>
<table class="mt-3 table-responsive-sm index-tabulka" border="1" width="100%">
    <thead>
        <tr>
            <th width="38%">
                <div class="my-2 ml-1">
                    Jméno
                </div>
            </th>
            <th witdh="38%">
                <div class="my-2 ml-1">
                    Bydliště
                </div>
            </th>
            <th width="24%"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td width="38%">
                <a class="my-2 ml-1"asp-action="Details" asp-route-id=@item.Id>@Html.DisplayFor(modelItem => item.FirstName)
                @Html.DisplayFor(modelItem => item.LastName)
                </a>
            </td>
            <td witdh="38%">
                <div class="my-2 ml-1">
                @Html.DisplayFor(modelItem => item.Street),
                @Html.DisplayFor(modelItem => item.City)
                </div>
            </td>
            <td class="text-center"width="24%">
                <a class="btn btn-danger tlacitka-tabulka my-2" asp-action="Delete" asp-route-id="@item.Id">Odstranit</a>
                <a class="btn btn-warning tlacitka-tabulka text-white my-2" asp-action="Edit" asp-route-id="@item.Id">Upravit</a>
            </td>
        </tr>
}
    </tbody>
</table>